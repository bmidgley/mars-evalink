{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Django Server",
            "type": "shell",
            "command": "${workspaceFolder}/../marsenv/bin/python",
            "args": [
                "manage.py",
                "runserver"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/../marsenv/bin/python",
            "args": [
                "manage.py",
                "test",
                "evalink.tests.FeaturesEndpointTestCase",
                "-v",
                "2"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Make Migrations",
            "type": "shell",
            "command": "${workspaceFolder}/../marsenv/bin/python",
            "args": [
                "manage.py",
                "makemigrations"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Migrate",
            "type": "shell",
            "command": "${workspaceFolder}/../marsenv/bin/python",
            "args": [
                "manage.py",
                "migrate"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
